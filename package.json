{
  "name": "claude-config-manager",
  "version": "2.0.0",
  "description": "Claude Code 配置管理工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win",
    "build:x64": "electron-builder --win --x64",
    "build:arm64": "electron-builder --win --arm64"
  },
  "keywords": [
    "claude",
    "config",
    "manager"
  ],
  "author": "Zhu Qixuan & Claude",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.claude.config.manager",
    "productName": "Claude Config Manager",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "ClaudeConfigManager-${version}-${arch}-Setup.exe"
    },
    "portable": {
      "artifactName": "ClaudeConfigManager-${version}-${arch}-portable.exe"
    },
    "directories": {
      "output": "dist"
    }
  }
}
